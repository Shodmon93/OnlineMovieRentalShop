@model IEnumerable<VidlyWithData.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    <script src="jquery-3.1.0.js"></script>
}

<h2>Customers</h2>



<div class="form-group">

    @Html.ActionLink("New Customer", "New", "Customers", new { @class = "btn btn-primary" })

</div>
<table id="customers" class=" table  table-hover table-bordered">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Birth Date</th>
            <th>Discount Rate </th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section scripts
{
   
   <script>


        $(document).ready(function ()
        {
           


            var table = $("#customers").DataTable({

                ajax: {
                    url: "/api/customers",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                        render: function (data, type, customer)
                        {
                            return "<a href = '/customer/edit/" + customer.id + "'>" + customer.name + "</a>";
                        }

                    },
                    {
                        data: "birthDate"

                    },
                    {
                        data: "membershipType.name"
                    },
                    {
                        data: "id",
                        render: function (data)
                        {
                            return "<button class='btn-block js-delete' data-customer-id=" + data + ">Delete</button>";

                        }
                    }

                ]

            });

            $("#customers").on("click", ".js-delete", function ()
            {
                var button = $(this)

                bootbox.confirm("Are you sure you want to delete this customer?", function (result)
                {
                    if (result)
                    {
                        $.ajax(
                            {
                                url: "/api/customers/" + button.attr("data-customer-id"),
                                method: "DELETE",
                                success: function ()
                                {
                                    table.row(button.parents("tr")).remove().draw();

                                }

                            });
                    }
                })

            });
        });
    </script>
}