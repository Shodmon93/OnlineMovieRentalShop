@model IEnumerable<VidlyWithData.Models.Movie>
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Movies</h2>
<div class="form-group">

    @Html.ActionLink("New Movie", "New", "Movie", new { @class = "btn btn-primary" })

</div>



<table id="movies" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
            <th>On Stcok</th>
            <th>Release Date</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section scripts
{

    <script>


        $(document).ready(function ()
        {
          var table =  $("#movies").DataTable({

                ajax: {
                    url: "/api/movie",
                    dataSrc:""

                },
                columns: [

                    {
                        data: "name",
                        render: function (data,type, movie)
                        {
                            return "<a href = '/movie/edit/" + movie.id + "'>" + movie.name + "</a>";
                        }
                    },
                    {data : "genre.name"  },
                    {
                        data: "numberInStock"
                    },
                    {
                        data: "releaseDate"
                    },
                    {
                        data: "id",
                        render: function (data)
                        {

                            return "<button class='btn-block js-delete' data-movie-id=" + data + ">Delete</button>";

                        }

                    }
                ]

            });

            $("#movies").on("click", ".js-delete", function ()
            {
                var button = $(this);
                var name = $(this).attr("data-movie-name")
                bootbox.confirm("Are you sure you want to delete " + name + " ?", function (result)
                {
                    if (result)
                    {
                        $.ajax({
                            url: "/api/movie/" + button.attr("data-movie-id"),
                            method: "DELETE",
                            success: function ()
                            {

                                table.row(button.parents("tr")).remove().draw();
                                
                            }

                        });
                    }
                })
            });

        });


      

    </script>
    


    }